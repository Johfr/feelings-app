{
  "compilerOptions": {
    "types": [],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"],
      "@components/*": ["src/components/*"],
      "@views/*": ["src/views/*"],
      "@stores/*": ["src/stores/*"],
      "@router/*": ["src/router/*"],
      "@composables/*": ["src/composables/*"],
      "@designSystem/*": ["src/design-system/*"]
    },
  },
  "exclude": ["node_modules", "dist"]
}
